//#define F_CPU 16000000UL
#include <avr/delay.h>
#include "MCAL/DIO/DIO_interface.h"
#include "MCAL/PORT/PORT.h"
#include "MCAL/SPI/includes/SPI_interface.h"
#include "MCAL/GI/GI_interface.h"

#include "MCAL/UART/includes/UART_interface.h"

#define ADMIN_PW 1234

static u8 USERS[20];

u8 Users_Pick;

void Action(void){
	Users_Pick=UART_Receive();
	Handle_user();
}

void Handle_user(void)
{
switch (Users_Pick) {
	case 1:
		UART_Send("k");
		break;
	case 2:

		break;
	case 3:

		break;
	default:
		break;
}
}

int main(){
	u8 access=0;
	u8 trials =0;
	u16 admin=0;
	u8 Users_Pick=0;

    Port_Init(pin_cfg);
    UART_Init();
	SPI_voidInit();
	EEPROM_voidInit();

	GI_voidEnable();
	UART_RX_InterruptEnable();
	UART_RX_SetCallBack(Action);
//while(1)
{
	while(1)
	{
		UART_TransmitString("ENTER PASSWORD:");
		admin = UART_ReceiveNumber();
		if(admin == ADMIN_PW)
			{access =1;
			break;}
		else {access=0;
		}
		if(trials == 3)
		{
			access=0;
			break;
		}
		trials++;
	}
	if(access==1){
		//handle admin functionality
		UART_TransmitString("\r\n 1 FOR ADDING NEW USER:\r\n");
		UART_TransmitString(" 2 FOR DELETING A USER:\r\n");
		UART_TransmitString(" 3 FOR EDITING A USER \r\n");
//		Users_Pick=UART_ReceiveNumber();
//		switch (Users_Pick) {
//			case 1:
//
//				break;
//			case 2:
//
//				break;
//			case 3:
//
//				break;
//			default:
//				break;
//		}

	}
	else {
		UART_TransmitString("CLS\r\n");
		UART_TransmitString("\r\n OUT OF TRIALS :\r\n");
		//UART_TransmitString("\r\n GOTTA WAIT :\r\n");
	_delay_ms(3000);
	}

//	SPI_voidTransieve();

}
	return 0;
}










































